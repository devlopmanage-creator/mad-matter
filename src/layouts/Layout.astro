---
import PerformanceOptimizer from '../components/PerformanceOptimizer.astro';
import ErrorHandler from '../components/ErrorHandler.astro';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  keywords?: string;
}

const { 
  title, 
  description = "FAMUAE - Premium building materials, tiles, sanitary ware, and design solutions in the UAE. Transform your space with our quality products and expert consultation services.",
  canonical = Astro.url.href,
  ogImage = "https://famuae.com/og-image.svg",
  keywords = "building materials, tiles, sanitary ware, bathroom fixtures, kitchen design, UAE, Dubai, premium materials, home renovation, interior design"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="FAMUAE" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />
    <!-- Favicon and Logo -->
    <link rel="icon" type="image/png" sizes="32x32" href="/FAM.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/FAM.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/FAM.png" />
    <link rel="shortcut icon" href="/FAM.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>{title}</title>
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://famuae.com/FAM.png" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="FAMUAE" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://famuae.com/FAM.png" />
    <meta name="twitter:site" content="@famuae" />
    
    <!-- Performance hints -->
    <meta name="theme-color" content="#15242a" />
    <meta name="color-scheme" content="dark" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "FAMUAE",
        "alternateName": "FAM Building Material",
        "url": "https://famuae.com",
        "logo": "https://famuae.com/FAM.png",
        "description": "Premium building materials, tiles, sanitary ware, and design solutions in the UAE",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "456 Construction Ave",
          "addressLocality": "Dubai",
          "addressCountry": "UAE"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+971-4-123-4567",
          "contactType": "customer service",
          "email": "info@famuae.com"
        },
        "sameAs": [
          "https://famuae.com"
        ],
        "foundingDate": "2020",
        "areaServed": "UAE",
        "serviceType": "Building Materials Supply"
      }
    </script>
    
    <PerformanceOptimizer />
    <ErrorHandler />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Color palette */
    --color-background: #0a0f14;
    --color-foreground: #f8fafc;
    --color-primary: #f8fafc;
    --color-secondary: #1a2332;
    --color-accent: #d4af37;
    --color-accent-hover: #b8941f;
    --color-muted: #64748b;
    --color-border: #2d3748;
    --color-surface: #1a2332;
    
    /* Typography */
    --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 
                 'Helvetica Neue', Arial, sans-serif;
    
    /* Spacing */
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    
    /* Border radius */
    --radius-sm: 0.25rem;
    --radius-md: 0.5rem;
    --radius-lg: 1rem;
  }

  /* Modern CSS Reset */
  *, *::before, *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
  }

  html {
    font-family: var(--font-sans);
    font-size: 16px;
    scroll-behavior: smooth;
    background-color: var(--color-background);
    overflow-x: hidden;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-foreground);
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    min-height: 100vh;
  }

  /* Optimized image defaults */
  img, picture, video, canvas, svg {
    display: block;
    max-width: 100%;
    height: auto;
  }

  /* Form elements inherit font */
  input, button, textarea, select {
    font: inherit;
  }

  /* Remove default button styles */
  button {
    cursor: pointer;
    border: none;
    background: none;
  }

  /* Remove default link styles */
  a {
    color: inherit;
    text-decoration: none;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
  }
  
  ::-webkit-scrollbar-track {
    background: #23272b;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #44474a;
    border-radius: 8px;
    border: 2px solid #23272b;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #5a5d60;
  }

  /* Utility classes */
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>