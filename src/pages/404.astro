---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="404 - Page Not Found | WONDA Design Solutions" 
  description="The page you're looking for could not be found"
>
  <main class="error-page">
    <div class="error-container">
      <div class="error-content">
        <div class="error-number">
          <span class="digit">4</span>
          <span class="digit">0</span>
          <span class="digit">4</span>
        </div>
        
        <h1 class="error-title">Page Not Found</h1>
        <p class="error-description">
          The page you're looking for seems to have been moved or doesn't exist. 
          Let's get you back on track.
        </p>
        
        <div class="error-actions">
          <a href="/" class="btn-primary">Go Home</a>
          <a href="/design" class="btn-secondary">View Collections</a>
        </div>
      </div>
      
      <div class="error-illustration">
        <svg viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
          <!-- Background circles -->
          <circle cx="400" cy="300" r="250" fill="rgba(0,0,0,0.02)" class="pulse-circle"/>
          <circle cx="400" cy="300" r="180" fill="rgba(0,0,0,0.03)" class="pulse-circle-delay"/>
          
          <!-- Main illustration -->
          <g class="floating">
            <!-- Bathroom fixture illustration -->
            <rect x="300" y="200" width="200" height="200" rx="20" fill="#f8f9fa" stroke="#e0e0e0" stroke-width="2"/>
            <circle cx="400" cy="300" r="60" fill="white" stroke="#d0d0d0" stroke-width="3"/>
            <circle cx="400" cy="300" r="40" fill="#f0f2f5" stroke="#c0c0c0" stroke-width="2"/>
            
            <!-- Decorative elements -->
            <rect x="320" y="220" width="30" height="30" rx="5" fill="#e8e8e8"/>
            <rect x="450" y="220" width="30" height="30" rx="5" fill="#e8e8e8"/>
            <rect x="320" y="350" width="30" height="30" rx="5" fill="#e8e8e8"/>
            <rect x="450" y="350" width="30" height="30" rx="5" fill="#e8e8e8"/>
          </g>
          
          <!-- Question marks -->
          <text x="150" y="250" font-size="40" fill="rgba(0,0,0,0.1)" class="question-mark">?</text>
          <text x="620" y="350" font-size="40" fill="rgba(0,0,0,0.1)" class="question-mark-delayed">?</text>
        </svg>
      </div>
    </div>
  </main>

  <script>
    import { gsap } from 'gsap';
    
    // Make GSAP available globally
    (window as any).gsap = gsap;
  </script>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof gsap !== 'undefined') {
        // Animate the 404 digits
        gsap.from('.digit', {
          duration: 1,
          y: -50,
          opacity: 0,
          stagger: 0.2,
          ease: 'back.out(1.7)',
          delay: 0.2
        });
        
        // Animate title and description
        gsap.from('.error-title', {
          duration: 0.8,
          y: 30,
          opacity: 0,
          ease: 'power3.out',
          delay: 0.8
        });
        
        gsap.from('.error-description', {
          duration: 0.8,
          y: 20,
          opacity: 0,
          ease: 'power3.out',
          delay: 1
        });
        
        // Animate buttons
        gsap.from('.error-actions a', {
          duration: 0.6,
          y: 20,
          opacity: 0,
          stagger: 0.15,
          ease: 'power3.out',
          delay: 1.2
        });
        
        // Animate illustration
        gsap.from('.error-illustration', {
          duration: 1,
          scale: 0.8,
          opacity: 0,
          ease: 'back.out(1.2)',
          delay: 0.5
        });
        
        // Floating animation
        gsap.to('.floating', {
          y: -20,
          duration: 2,
          repeat: -1,
          yoyo: true,
          ease: 'power1.inOut'
        });
        
        // Pulse animation for circles
        gsap.to('.pulse-circle', {
          scale: 1.1,
          opacity: 0.5,
          duration: 2,
          repeat: -1,
          yoyo: true,
          ease: 'power1.inOut',
          transformOrigin: 'center'
        });
        
        gsap.to('.pulse-circle-delay', {
          scale: 1.15,
          opacity: 0.3,
          duration: 2,
          repeat: -1,
          yoyo: true,
          ease: 'power1.inOut',
          transformOrigin: 'center',
          delay: 0.5
        });
        
        // Question marks animation
        gsap.to('.question-mark', {
          y: -10,
          opacity: 0.3,
          duration: 1.5,
          repeat: -1,
          yoyo: true,
          ease: 'power1.inOut'
        });
        
        gsap.to('.question-mark-delayed', {
          y: -10,
          opacity: 0.3,
          duration: 1.5,
          repeat: -1,
          yoyo: true,
          ease: 'power1.inOut',
          delay: 0.7
        });
        
        // Button hover effects
        const buttons = document.querySelectorAll('.error-actions a');
        buttons.forEach(button => {
          button.addEventListener('mouseenter', () => {
            gsap.to(button, {
              y: -3,
              scale: 1.02,
              duration: 0.3,
              ease: 'power2.out'
            });
          });
          
          button.addEventListener('mouseleave', () => {
            gsap.to(button, {
              y: 0,
              scale: 1,
              duration: 0.3,
              ease: 'power2.out'
            });
          });
        });
      }
    });
  </script>

  <style>
    /* Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    .error-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f5f7fa 0%, #e8edf2 100%);
      padding: 2rem;
      overflow: hidden;
      font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .error-container {
      max-width: 1200px;
      width: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .error-content {
      text-align: left;
    }

    .error-number {
      display: flex;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .digit {
      font-size: 8rem;
      font-weight: 700;
      color: #1a1a1a;
      font-family: 'Playfair Display', serif;
      line-height: 1;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .error-title {
      font-size: 3rem;
      font-weight: 300;
      color: #1a1a1a;
      margin-bottom: 1.5rem;
      font-family: 'Playfair Display', serif;
      letter-spacing: -0.02em;
    }

    .error-description {
      font-size: 1.2rem;
      color: #666;
      line-height: 1.7;
      margin-bottom: 3rem;
      max-width: 500px;
      font-weight: 300;
    }

    .error-actions {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .btn-primary,
    .btn-secondary {
      display: inline-block;
      padding: 1rem 2.5rem;
      text-decoration: none;
      font-weight: 500;
      font-size: 1rem;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      border-radius: 4px;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .btn-primary {
      background: #000;
      color: white;
      border: 2px solid #000;
    }

    .btn-primary:hover {
      background: transparent;
      color: #000;
    }

    .btn-secondary {
      background: transparent;
      color: #000;
      border: 2px solid #000;
    }

    .btn-secondary:hover {
      background: #000;
      color: white;
    }

    .error-illustration {
      width: 100%;
      max-width: 500px;
      margin: 0 auto;
    }

    .error-illustration svg {
      width: 100%;
      height: auto;
      filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.1));
    }

    /* Responsive Design */
    @media (max-width: 968px) {
      .error-container {
        grid-template-columns: 1fr;
        gap: 3rem;
        text-align: center;
      }

      .error-content {
        text-align: center;
      }

      .error-number {
        justify-content: center;
      }

      .digit {
        font-size: 6rem;
      }

      .error-title {
        font-size: 2.5rem;
      }

      .error-description {
        margin: 0 auto 2.5rem;
      }

      .error-actions {
        justify-content: center;
      }
    }

    @media (max-width: 600px) {
      .error-page {
        padding: 1.5rem;
      }

      .digit {
        font-size: 4rem;
        gap: 0.5rem;
      }

      .error-number {
        gap: 0.5rem;
        margin-bottom: 1.5rem;
      }

      .error-title {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      .error-description {
        font-size: 1rem;
        margin-bottom: 2rem;
      }

      .btn-primary,
      .btn-secondary {
        padding: 0.9rem 2rem;
        font-size: 0.9rem;
        width: 100%;
      }

      .error-actions {
        flex-direction: column;
        gap: 1rem;
      }

      .error-illustration {
        max-width: 300px;
      }
    }

    @media (max-width: 400px) {
      .digit {
        font-size: 3rem;
      }

      .error-title {
        font-size: 1.5rem;
      }

      .error-description {
        font-size: 0.95rem;
      }
    }

    /* Print styles */
    @media print {
      .error-page {
        background: white;
      }

      .error-illustration {
        display: none;
      }
    }
  </style>
</Layout>

