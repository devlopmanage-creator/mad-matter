---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import HeroSection from '../components/HeroSection.astro';
import FeaturesBar from '../components/FeaturesBar.astro';
import BrandShowcase from '../components/BrandShowcase.astro';
import ClientTestimonials from '../components/ClientTestimonials.astro';
import WondaSection from '../components/WondaSection.astro';
import ContactSection from '../components/ContactSection.astro';
import ExpertConsultation from '../components/ExpertConsultation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="FAMUAE - Premium Building Materials & Design Solutions | Tiles, Sanitary Ware UAE"
  description="Transform your space with FAMUAE's premium building materials. Quality tiles, sanitary ware, bathroom fixtures, and design solutions in Dubai, UAE. Expert consultation available."
  keywords="building materials UAE, tiles Dubai, sanitary ware, bathroom fixtures, kitchen design, premium materials, home renovation Dubai, interior design UAE"
>
  <main>
    <Navigation />
    <HeroSection />
    <FeaturesBar />
    <BrandShowcase />
    <WondaSection />
    <ContactSection />
    <ClientTestimonials />
