            trigger: '.index-box1',
            start: 'top 80%',
            onEnter: () => {
              gsap.from('.index-box1 .container', {
                duration: 1,
                x: -50,
                opacity: 0,
                ease: 'power3.out'
              });
            },
            once: true
          });
          
          // Features Section Animation
