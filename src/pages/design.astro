  <!-- GSAP with ScrollTrigger -->
  <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    
    gsap.registerPlugin(ScrollTrigger);
    
    // Make GSAP available globally for inline script
    (window as any).gsap = gsap;
    (window as any).ScrollTrigger = ScrollTrigger;
  </script>
  
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      // Wait for Swiper and GSAP to load
      setTimeout(function() {
        if (typeof Swiper !== 'undefined' && typeof gsap !== 'undefined') {
          console.log('Swiper and GSAP loaded, initializing with advanced effects...');
          
          // ========================================
          // GSAP ANIMATIONS SETUP
          // ========================================
          
          // Initial page load animations
          gsap.from('.home-banner .tbox .title', {
            duration: 1.2,
            y: 50,
            opacity: 0,
            ease: 'power3.out',
            delay: 0.3
          });
          
          gsap.from('.home-banner .tbox .txt', {
            duration: 1,
            y: 30,
            opacity: 0,
            ease: 'power3.out',
            delay: 0.6
          });
          
          // Hero Banner Parallax with GSAP ScrollTrigger (subtle effect)
          gsap.to('.home-banner .img img', {
            scale: 1.05,
            ease: 'none',
            scrollTrigger: {
              trigger: '.home-banner',
              start: 'top top',
              end: 'bottom top',
              scrub: 1
            }
          });
          
          // Collections Section Parallax (subtle effect)
          gsap.to('.index-box1 .img img', {
            scale: 1.05,
            ease: 'none',
            scrollTrigger: {
              trigger: '.index-box1',
              start: 'top bottom',
              end: 'bottom top',
              scrub: 1
            }
          });
          
          // Collections text animation
          ScrollTrigger.create({
            trigger: '.index-box1',
            start: 'top 80%',
            onEnter: () => {
              gsap.from('.index-box1 .container', {
                duration: 1,
                x: -50,
                opacity: 0,
                ease: 'power3.out'
              });
            },
            once: true
          });
          
          // Features Section Animation
          ScrollTrigger.create({
            trigger: '.index-box2',
            start: 'top 80%',
            onEnter: () => {
              gsap.from('.index-box2 .container-box', {
                duration: 1.2,
                y: 50,
                opacity: 0,
                ease: 'power3.out'
              });
            },
            once: true
          });
          
          // Projects Section - Stagger animation
          gsap.from('.index-box4 .title', {
            scrollTrigger: {
              trigger: '.index-box4',
              start: 'top 80%',
              toggleActions: 'play none none none'
            },
            duration: 1,
            y: 30,
            opacity: 0,
            ease: 'power3.out'
          });
          
          // Individual project items with stagger
          gsap.from('.index-box4 .item', {
            scrollTrigger: {
              trigger: '.index-box4',
              start: 'top 70%',
              toggleActions: 'play none none none'
            },
            duration: 0.8,
            y: 50,
            opacity: 0,
            stagger: 0.15,
            ease: 'power3.out'
          });
          
          // Wonda Section Animations
          gsap.from('.wonda-section .title', {
            scrollTrigger: {
              trigger: '.wonda-section',
              start: 'top 80%',
              toggleActions: 'play none none none'
            },
            duration: 1,
            scale: 0.9,
            opacity: 0,
            ease: 'back.out(1.3)'
          });
          
          gsap.from('.wonda-section .subtitle', {
            scrollTrigger: {
              trigger: '.wonda-section',
              start: 'top 80%',
              toggleActions: 'play none none none'
            },
            duration: 1,
            y: 20,
            opacity: 0,
            ease: 'power3.out',
            delay: 0.2
          });
          
          gsap.from('.wonda-item', {
            scrollTrigger: {
              trigger: '.wonda-gallery',
              start: 'top 75%',
              toggleActions: 'play none none none'
            },
            duration: 0.8,
            y: 60,
            opacity: 0,
            stagger: 0.2,
            ease: 'power3.out'
          });
          
