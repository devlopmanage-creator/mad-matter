        if (typeof Swiper !== 'undefined' && typeof gsap !== 'undefined') {
          console.log('Swiper and GSAP loaded, initializing with advanced effects...');
          
          // ========================================
          // GSAP ANIMATIONS SETUP
          // ========================================
          
          // Initial page load animations
          gsap.from('.home-banner .tbox .title', {
            duration: 1.2,
            y: 50,
            opacity: 0,
            ease: 'power3.out',
            delay: 0.3
          });
          
          gsap.from('.home-banner .tbox .txt', {
            duration: 1,
            y: 30,
            opacity: 0,
            ease: 'power3.out',
            delay: 0.6
          });
          
          // Hero Banner Parallax with GSAP ScrollTrigger (subtle effect)
          gsap.to('.home-banner .img img', {
            scale: 1.05,
            ease: 'none',
            scrollTrigger: {
              trigger: '.home-banner',
              start: 'top top',
              end: 'bottom top',
              scrub: 1
            }
          });
          
          // Collections Section Parallax (subtle effect)
          gsap.to('.index-box1 .img img', {
            scale: 1.05,
            ease: 'none',
            scrollTrigger: {
              trigger: '.index-box1',
              start: 'top bottom',
              end: 'bottom top',
              scrub: 1
            }
          });
          
          // Collections text animation
