            trigger: '.index-box2',
            start: 'top 80%',
            onEnter: () => {
              gsap.from('.index-box2 .container-box', {
                duration: 1.2,
                y: 50,
                opacity: 0,
                ease: 'power3.out'
              });
            },
            once: true
          });
          
          // Projects Section - Stagger animation
