  <script is:inline>
    // Initialize fullPage.js when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      // Check if fullpage is available and element exists
      if (typeof fullpage !== 'undefined' && document.getElementById('fullpage')) {
        try {
          new fullpage('#fullpage', {
            autoScrolling: true,
            navigation: true,
            scrollHorizontally: false,
            fitToSection: true,
            anchors: ['Wonda', 'focus', 'collections', 'gallery', 'news', 'inspiration'],
            navigationTooltips: ['Wonda', 'Focus', 'Collections', 'Gallery', 'News', 'Inspiration'],
            showActiveTooltip: true,
            responsiveWidth: 900,
            credits: { enabled: false },
            afterRender: function() {
              // Always start at first section
              if (window.location.hash) {
                if (typeof fullpage_api !== 'undefined') {
                  fullpage_api.moveTo(1);
                }
                history.replaceState(null, '', window.location.pathname);
              }
            }
          });
        } catch (error) {
          console.warn('FullPage.js initialization failed:', error);
        }
      }

      // Remove watermark after initialization
      setTimeout(() => {
        const watermarks = document.querySelectorAll('.fp-watermark');
        watermarks.forEach(el => el.remove());
      }, 1000);

      // Simple carousel functionality
      let slideIndex = 1;
      let autoPlayInterval;
      
      // Initialize carousel
      function initCarousel() {
        const slides = document.querySelectorAll('.carousel-slide');
        const dots = document.querySelectorAll('.dot');
        const prevBtn = document.querySelector('.carousel-btn.prev');
        const nextBtn = document.querySelector('.carousel-btn.next');
        
        // Preload all images to prevent size changes
        preloadImages();
        
        // Show first slide
        showSlide(1);
        
        // Add event listeners to navigation buttons
        if (prevBtn) {
          prevBtn.addEventListener('click', () => changeSlide(-1));
        }
        
        if (nextBtn) {
          nextBtn.addEventListener('click', () => changeSlide(1));
        }
        
        // Add event listeners to dots
        dots.forEach((dot, index) => {
          dot.addEventListener('click', () => currentSlide(index + 1));
        });
        
        // Add keyboard navigation (disabled for collections)
        // document.addEventListener('keydown', (e) => {
        //   if (e.key === 'ArrowLeft') {
        //     changeSlide(-1);
        //   } else if (e.key === 'ArrowRight') {
        //     changeSlide(1);
        //   }
        // });
        
        // Pause auto-play on hover (disabled for collections)
        // const carousel = document.querySelector('.simple-carousel');
        // if (carousel) {
        //   carousel.addEventListener('mouseenter', stopAutoPlay);
        //   carousel.addEventListener('mouseleave', startAutoPlay);
        // }
        
        // Start auto-play
        startAutoPlay();
      }
      
      function changeSlide(n) {
        const slides = document.querySelectorAll('.carousel-slide');
        slideIndex += n;
        
        if (slideIndex > slides.length) { 
          slideIndex = 1; 
        }
        if (slideIndex < 1) { 
          slideIndex = slides.length; 
        }
        
        showSlide(slideIndex);
        restartAutoPlay(); // Restart auto-play when user interacts
      }
      
      function currentSlide(n) {
        slideIndex = n;
        showSlide(slideIndex);
        restartAutoPlay(); // Restart auto-play when user interacts
      }
      
      function showSlide(n) {
        const slides = document.querySelectorAll('.carousel-slide');
        const dots = document.querySelectorAll('.dot');
        
        // Remove active class from all slides and dots
        slides.forEach(slide => slide.classList.remove('active'));
        dots.forEach(dot => dot.classList.remove('active'));
        
        // Add active class to current slide and dot
        if (slides[n - 1]) {
          slides[n - 1].classList.add('active');
        }
        if (dots[n - 1]) {
          dots[n - 1].classList.add('active');
        }
      }
      
      function startAutoPlay() {
        autoPlayInterval = setInterval(() => {
          changeSlide(1);
        }, 4000);
        // Hide play indicator when playing
        const playIndicator = document.querySelector('.carousel-play-indicator');
        if (playIndicator) {
          playIndicator.style.display = 'none';
        }
      }
      
      function stopAutoPlay() {
        if (autoPlayInterval) {
          clearInterval(autoPlayInterval);
        }
        // Show play indicator when paused
        const playIndicator = document.querySelector('.carousel-play-indicator');
        if (playIndicator) {
          playIndicator.style.display = 'flex';
        }
      }
      
      function restartAutoPlay() {
        stopAutoPlay();
        startAutoPlay();
      }
      
      // Preload images to prevent layout shifts
      function preloadImages() {
        const images = document.querySelectorAll('.carousel-slide .design-img');
        let loadedCount = 0;
        
        images.forEach((img, index) => {
          const imageLoader = new Image();
          imageLoader.onload = function() {
            loadedCount++;
            console.log(`Image ${index + 1} loaded`);
            
            // Once all images are loaded, start the carousel
            if (loadedCount === images.length) {
              console.log('All images preloaded successfully');
            }
          };
          imageLoader.onerror = function() {
            console.error(`Failed to load image ${index + 1}`);
            loadedCount++;
          };
          imageLoader.src = img.src;
        });
      }
      
      // Initialize carousel when DOM is ready
      initCarousel();
      
      // Initialize gallery interactions
      initGallery();

    });
  </script>
  
  <script is:inline>
    // Gallery functionality (global)
    function initGallery() {
      console.log('Starting gallery initialization...');
      const galleryItems = document.querySelectorAll('.gallery-item');
      console.log('Found gallery items:', galleryItems.length);
      
      if (galleryItems.length === 0) {
        console.error('No gallery items found!');
        return;
      }
      
      galleryItems.forEach((item, index) => {
        console.log('Adding click listener to item:', index);
        item.addEventListener('click', function(e) {
          e.preventDefault();
          console.log('Gallery item clicked:', index);
          
          const img = this.querySelector('.gallery-img');
          if (!img) {
            console.error('No image found in gallery item');
            return;
          }
          
          const imgSrc = img.src;
          const imgAlt = img.alt;
          
          console.log('Image data:', { src: imgSrc, alt: imgAlt });
          
          // Open the modal directly
          openImageViewer(imgSrc, imgAlt, index + 1);
        });
      });
    }
    
    
    // Global function to resume carousel
    function resumeCarousel() {
      if (typeof startAutoPlay === 'function') {
        startAutoPlay();
        console.log('Carousel resumed');
      }
    }
    
    // Global gallery functions
    function openImageViewer(imgSrc, imgAlt, slideNumber) {
      console.log('openImageViewer called with:', imgSrc, imgAlt, slideNumber);
      
      // Remove any existing modal first
      const existingModal = document.querySelector('.image-modal');
      if (existingModal) {
        existingModal.remove();
      }
      
      // Create modal overlay
      const modal = document.createElement('div');
      modal.className = 'image-modal';
      modal.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        cursor: pointer;
      `;
      
      modal.innerHTML = `
        <div class="modal-content" style="
          background: white;
          border-radius: 12px;
          max-width: 90vw;
          max-height: 90vh;
          display: flex;
          flex-direction: column;
          box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
          overflow: hidden;
          cursor: default;
        ">
          <div class="modal-header" style="
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #eee;
            background: #f8f8f8;
          ">
            <h3 style="margin: 0; font-family: 'Playfair Display', serif; font-size: 1.2rem; color: #222;">${imgAlt}</h3>
            <button class="close-btn" style="
              background: none;
              border: none;
              font-size: 1.5rem;
              cursor: pointer;
              color: #666;
              padding: 0;
              width: 30px;
              height: 30px;
              display: flex;
              align-items: center;
              justify-content: center;
              border-radius: 50%;
            ">&times;</button>
          </div>
          <div class="modal-body" style="
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: #fafafa;
          ">
            <img src="${imgSrc}" alt="${imgAlt}" class="modal-image" style="
              max-width: 100%;
              max-height: 70vh;
              object-fit: contain;
              border-radius: 8px;
              box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            " />
          </div>
        </div>
      `;
      
      document.body.appendChild(modal);
      document.body.style.overflow = 'hidden';
      
      console.log('Modal added to DOM');
      
      // Add event listeners
      const closeBtn = modal.querySelector('.close-btn');
      
      closeBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        closeImageViewer();
      });
      
      // Close when clicking outside
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          closeImageViewer();
        }
      });
      
      // Close with Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closeImageViewer();
        }
      });
    }
    
    function closeImageViewer() {
      const modal = document.querySelector('.image-modal');
      if (modal) {
        modal.remove();
        document.body.style.overflow = 'auto'; // Restore scrolling
      }
    }
    
    function downloadImage(imgSrc, imgAlt) {
      const link = document.createElement('a');
      link.href = imgSrc;
      link.download = imgAlt.replace(/\s+/g, '_') + '.jpg';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }
    
    // Manual initialization function
    function initGalleryManually() {
      console.log('Manual gallery initialization...');
      initGallery();
    }
    
    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', function() {
      console.log('DOM loaded, initializing gallery...');
      setTimeout(initGallery, 1000); // Wait 1 second to ensure everything is loaded
    });
    
    // Also try to initialize after a longer delay
    setTimeout(function() {
      console.log('Delayed gallery initialization...');
      initGallery();
    }, 3000);
  </script>
