---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

---


<Layout title="FAM Design - Inspired by Minotti">
  <Navigation />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/4.0.24/fullpage.min.css" />
  <div id="fullpage">
    <section class="section design-hero">
      <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1600&q=80" alt="Minotti Hero" class="design-img" loading="lazy" />
    </section>
    <section class="section design-card">
      <h1 class="design-title">Focus On</h1>
      <div class="design-subtitle">INDOOR &mdash; OUTDOOR</div>
    </section>
    <section class="section design-hero">
      <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=1600&q=80" alt="Collections" class="design-img" />
    </section>
    <section class="section design-card">
      <h2 class="design-title">News</h2>
      <div class="design-subtitle"><a href="#" class="design-link">SEE ALL NEWS</a></div>
    </section>
    <section class="section design-hero">
      <img src="https://images.unsplash.com/photo-1512918728675-ed5a9ecdebfd?auto=format&fit=crop&w=1600&q=80" alt="Inspiration" class="design-img" />
    </section>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/4.0.24/fullpage.min.js" is:inline></script>
  <script is:inline>
    if (typeof window !== 'undefined') {
      window.addEventListener('DOMContentLoaded', () => {
        if (window.fullpage) {
          new window.fullpage('#fullpage', {
            autoScrolling: true,
            navigation: true,
            scrollHorizontally: false,
            fitToSection: true,
            anchors: ['hero', 'focus', 'collections', 'news', 'inspiration'],
            navigationTooltips: ['Hero', 'Focus', 'Collections', 'News', 'Inspiration'],
            showActiveTooltip: true,
            responsiveWidth: 900
          });
        }
      });
    }
  </script>
  <Footer />
  <style>
    .design-main {
      background: #15242a;
      min-height: 100vh;
      width: 100vw;
      margin: 0;
      padding: 0;
    }
    .section {
      width: 100vw;
      height: 100vh;
      min-height: 100vh;
      max-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin: 0;
      padding: 0;
      background: #15242a;
    }
    .design-img {
      width: 100vw;
      height: 100vh;
      min-height: 400px;
      max-height: 100vh;
      object-fit: cover;
      border-radius: 0;
      box-shadow: none;
      margin: 0;
      display: block;
      background: #222;
    }
    .design-card {
      width: 100vw;
      height: 100vh;
      background: #fff;
      border-radius: 0;
      box-shadow: none;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: 0;
      padding: 0;
      }
      .design-card-content {
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 2px 24px #0002;
        padding: 3.5rem 2rem 2.5rem 2rem;
        max-width: 1400px;
        width: 80vw;
        min-height: 320px;
        text-align: center;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
    .design-title, .design-subtitle, .design-link {
      margin-left: 0;
    }
    .design-title {
      font-family: 'Playfair Display', serif;
      font-size: 2.8rem;
      font-weight: 400;
      color: #222;
      margin-bottom: 1.2rem;
      letter-spacing: 1px;
    }
    .design-subtitle {
      font-family: 'Montserrat', Arial, sans-serif;
      font-size: 1.1rem;
      color: #222;
      letter-spacing: 2px;
      margin-bottom: 0;
      text-transform: uppercase;
      font-weight: 400;
    }
    .design-link {
      color: #bfa16b;
      text-decoration: none;
      font-weight: 500;
      margin-left: 1.5rem;
      font-size: 1.1rem;
      letter-spacing: 1px;
      transition: color 0.2s;
    }
    .design-link:hover {
      color: #a88c5c;
    }
    @media (max-width: 900px) {
      .design-title { font-size: 2rem; }
      .design-img { width: 98vw; height: 180px; border-radius: 1rem; margin: 1.2rem 0; }
      .design-card { padding: 1.5rem 0.5rem 1.2rem 0.5rem; }
    }
  </link>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" is:inline></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" is:inline></script>
  <script is:inline>
    if (typeof window !== 'undefined') {
      window.addEventListener('DOMContentLoaded', () => {
        if (window.gsap && window.ScrollTrigger) {
          gsap.registerPlugin(ScrollTrigger);
          gsap.utils.toArray('.design-img').forEach(img => {
            gsap.fromTo(img,
              { opacity: 0, scale: 0.92 },
              {
                opacity: 1,
                scale: 1,
                duration: 1.6,
                ease: 'power4.out',
                scrollTrigger: {
                  trigger: img,
                  start: 'top 80%',
                  toggleActions: 'play reverse play reverse',
                }
              }
            );
          });
        }
      });
    }
  </script>
</Layout>