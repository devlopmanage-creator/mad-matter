---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---


<Layout 
  title="Design Inspiration - FAMUAE | Modern Interior & Exterior Design Solutions"
  description="Discover design inspiration with FAMUAE's modern interior and exterior solutions. Explore our focus on indoor-outdoor living and contemporary design trends."
  keywords="design inspiration, modern interior design, exterior design, indoor outdoor living, contemporary design UAE, design trends, FAMUAE design"
>
  <Navigation />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/4.0.24/fullpage.min.css" />
  <div id="fullpage">
    <section class="section design-hero">
      <video src="https://res.cloudinary.com/doleg7smw/video/upload/v1759340239/WONDA_MOVIE__dlaopm.mp4" class="design-video" autoplay muted loop playsinline controls></video>
    </section>
    <section class="section design-card">
      <h1 class="design-title">RADAWAY</h1>
      <div class="design-subtitle">INDOOR &mdash; OUTDOOR</div>
    </section>
    <section class="section design-hero">
      <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=1600&q=80" alt="Collections" class="design-img" />
    </section>
    <section class="section design-card">
      <h2 class="design-title">News</h2>
      <div class="design-subtitle"><a href="#" class="design-link">SEE ALL NEWS</a></div>
    </section>
    <section class="section design-hero">
      <img src="https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=1600&q=80" alt="Inspiration" class="design-img" />
    </section>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/4.0.24/fullpage.min.js" is:inline></script>
  <script is:inline>
    // Initialize fullPage.js when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      // Check if fullpage is available and element exists
      if (typeof fullpage !== 'undefined' && document.getElementById('fullpage')) {
        try {
          new fullpage('#fullpage', {
            autoScrolling: true,
            navigation: true,
            scrollHorizontally: false,
            fitToSection: true,
            anchors: ['Wonda', 'focus', 'collections', 'news', 'inspiration'],
            navigationTooltips: ['Wonda', 'Focus', 'Collections', 'News', 'Inspiration'],
            showActiveTooltip: true,
            responsiveWidth: 900,
            credits: { enabled: false },
            afterRender: function() {
              // Always start at first section
              if (window.location.hash) {
                if (typeof fullpage_api !== 'undefined') {
                  fullpage_api.moveTo(1);
                }
                history.replaceState(null, '', window.location.pathname);
              }
            }
          });
        } catch (error) {
          console.warn('FullPage.js initialization failed:', error);
        }
      }

      // Remove watermark after initialization
      setTimeout(() => {
        const watermarks = document.querySelectorAll('.fp-watermark');
        watermarks.forEach(el => el.remove());
      }, 1000);

    });
  </script>
  
  <Footer />
</Layout>
  <style>
    .design-main {
      min-height: 100vh;
      width: 100vw;
      margin: 0;
      padding: 0;
    }
    .section {
      width: 100vw;
      height: 100vh;
      min-height: 100vh;
      max-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin: 0;
      padding: 0;
      
    }
    .design-img {
      width: 100vw;
      height: 100vh;
      min-height: 400px;
      max-height: 100vh;
      object-fit: cover;
      border-radius: 0;
      box-shadow: none;
      margin: 0;
      display: block;
      /* background: #222; */
    }
    .design-video {
      width: 100vw;
      height: 100vh;
      min-height: 400px;
      max-height: 100vh;
      object-fit: cover;
      border-radius: 0;
      box-shadow: none;
      margin: 0;
      display: block;
    }
    .design-card {
  width: 100vw;
  background: #fff;
  box-shadow: 0 2px 24px #0002;
  text-align: center;
  padding: 2.5rem 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: auto;
  min-height: 320px;
  border-radius: 0;
  max-width: none;
    }
    .design-title {
      font-family: 'Playfair Display', serif;
      font-size: 2.8rem;
      font-weight: 400;
      color: #222;
      margin-bottom: 1.2rem;
      letter-spacing: 1px;
    }
    .design-subtitle {
      font-family: 'Montserrat', Arial, sans-serif;
      font-size: 1.1rem;
      color: #222;
      letter-spacing: 2px;
      margin-bottom: 0;
      text-transform: uppercase;
      font-weight: 400;
    }
    .design-link {
      color: #bfa16b;
      text-decoration: none;
      font-weight: 500;
      margin-left: 1.5rem;
      font-size: 1.1rem;
      letter-spacing: 1px;
      transition: color 0.2s;
    }
    .design-link:hover {
      color: #a88c5c;
    }
