<style>
  .hero-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #0c0d0f;
    color: white;
    text-align: center;
    padding: 8rem 1rem 4rem;
  }

  .hero-section .content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-section h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    margin-bottom: 1rem;
  }

  .hero-section p {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
  }

  .catalogues-section {
    padding: 6rem 1rem;
    background-color: #15242a;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: 2rem;
    font-weight: 300;
    color: white;
    margin-bottom: 1rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .divider {
    width: 40px;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.3);
    margin: 1rem auto;
  }

  .section-header p {
    color: rgba(255, 255, 255, 0.6);
    max-width: 600px;
    margin: 0 auto;
    font-size: 0.9rem;
  }

  .catalogues-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
    padding: 3rem;
  }

  .catalogue-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .catalogue-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .catalogue-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .catalogue-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.2) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .catalogue-card:hover .catalogue-image::after {
    opacity: 1;
  }

  .catalogue-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .catalogue-card:hover .catalogue-image img {
    transform: scale(1.08);
  }

  .catalogue-info {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.03) 0%, rgba(255, 255, 255, 0.01) 100%);
  }

  .catalogue-info h3 {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 1rem;
    font-weight: 400;
    letter-spacing: -0.02em;
  }

  .catalogue-info p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: auto;
    font-weight: 300;
  }

  .catalogue-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .download-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    color: white;
    padding: 1.25rem 2rem;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
    min-height: 60px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    position: relative;
    text-align: center;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .download-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .download-button::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 100%);
    opacity: 0;
    transition: all 0.4s ease;
    border-radius: 8px;
  }

  .download-button:hover {
    border-color: rgba(255, 255, 255, 0.4);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3), 0 0 20px rgba(255, 255, 255, 0.1);
  }

  .download-button:hover::before {
    left: 100%;
  }

  .download-button:hover::after {
    opacity: 1;
  }

  .download-icon {
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    flex-shrink: 0;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  .download-button:hover .download-icon {
    color: white;
    transform: translateY(-2px) scale(1.1);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.4));
  }

  .download-button:active {
    transform: translateY(-1px) scale(0.98);
  }

  .download-button:active .download-icon {
    transform: translateY(-1px) scale(1.05);
  }

  @media (max-width: 768px) {
    .catalogues-grid {
      grid-template-columns: 1fr;
      padding: 1rem;
    }

    .hero-section {
      padding: 6rem 1rem 3rem;
    }
  }
</style>