---
import ContactForm from './ContactForm.astro';
---

<section class="contact-section">
  <div class="container">
    <div class="form-side">
      <h1 class="brand-name" data-gsap="fade-up">WONDA</h1>
      <p class="slogan" data-gsap="fade-up" data-gsap-delay="0.2">Innovation in Motion Since 2020</p>
      
      <div class="luxury-tag" data-gsap="fade-up" data-gsap-delay="0.4">SMART HOME SOLUTIONS</div>
      
      <p class="description" data-gsap="fade-up" data-gsap-delay="0.6">Revolutionary smart home technology that transforms your living space. Wonda represents the future of home automation, combining cutting-edge innovation with elegant design and seamless integration.</p>
      
      <div class="features-section" data-gsap="fade-up" data-gsap-delay="0.8">
        <h3 class="features-title">Key Features:</h3>
        <ul class="features-list">
          <li class="feature-item" data-gsap="slide-left" data-gsap-delay="1.0">
            <span class="checkmark">✓</span>
            Smart Home Automation
          </li>
          <li class="feature-item" data-gsap="slide-left" data-gsap-delay="1.1">
            <span class="checkmark">✓</span>
            Voice Control Integration
          </li>
          <li class="feature-item" data-gsap="slide-left" data-gsap-delay="1.2">
            <span class="checkmark">✓</span>
            Energy Efficient Solutions
          </li>
          <li class="feature-item" data-gsap="slide-left" data-gsap-delay="1.3">
            <span class="checkmark">✓</span>
            Seamless Connectivity
          </li>
        </ul>
      </div>
      
      <a href="/design" class="explore-btn" data-gsap="fade-up" data-gsap-delay="1.5">
        Explore Wonda Products
        <span class="arrow">→</span>
      </a>
    </div>
    <div class="video-side">
      <video 
        class="luxury-video" 
        autoplay 
        muted 
        loop 
        playsinline
        data-gsap="scale-in"
        data-gsap-delay="0.5"
      >
        <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4" type="video/mp4">
        <source src="https://sample-videos.com/zip/10/mp4/SampleVideo_1280x720_1mb.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <div class="video-overlay"></div>
      <div class="overlay-info" data-gsap="fade-in" data-gsap-delay="1.0">
        <div class="country">WONDA</div>
      </div>
    </div>
  </div>
</section>

<script>
  // Simple CSS animations as fallback
  document.addEventListener('DOMContentLoaded', () => {
    // Add CSS classes for animations
    const fadeUpElements = document.querySelectorAll('[data-gsap="fade-up"]');
    const slideLeftElements = document.querySelectorAll('[data-gsap="slide-left"]');
    const videoElement = document.querySelector('.luxury-video') as HTMLElement;
    const overlayElement = document.querySelector('.overlay-info') as HTMLElement;

    // Intersection Observer for scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observe all animated elements
    [...fadeUpElements, ...slideLeftElements, videoElement, overlayElement].forEach(el => {
      if (el) observer.observe(el);
    });

    // Hover effects for feature items
    const featureItems = document.querySelectorAll('.feature-item');
    featureItems.forEach(item => {
      const htmlItem = item as HTMLElement;
      htmlItem.addEventListener('mouseenter', () => {
        htmlItem.style.transform = 'translateX(10px)';
        htmlItem.style.transition = 'transform 0.3s ease';
      });
      
      htmlItem.addEventListener('mouseleave', () => {
        htmlItem.style.transform = 'translateX(0)';
      });
    });

    // Button hover animation
    const exploreBtn = document.querySelector('.explore-btn') as HTMLElement;
    if (exploreBtn) {
      exploreBtn.addEventListener('mouseenter', () => {
        exploreBtn.style.transform = 'scale(1.05)';
        exploreBtn.style.transition = 'transform 0.3s ease';
      });
      
      exploreBtn.addEventListener('mouseleave', () => {
        exploreBtn.style.transform = 'scale(1)';
      });
    }
  });
</script>


<style>

  .contact-section {
    position: relative;
    padding: 6rem 2rem;
    background: linear-gradient(135deg, #15242a);
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .form-side {
    max-width: 500px;
  }

  .brand-name {
    color: #ffffff;
    font-size: clamp(2.8rem, 7vw, 4rem);
    font-weight: 800;
    font-family: 'Playfair Display', serif;
    margin-bottom: 0.5rem;
    line-height: 1.1;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .slogan {
    color: #ffffff;
    font-size: 1.4rem;
    font-weight: 400;
    font-family: 'Inter', sans-serif;
    margin-bottom: 1.5rem;
    opacity: 0.9;
    letter-spacing: 0.01em;
  }

  .luxury-tag {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    color: #ffffff;
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: inline-block;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    font-family: 'Inter', sans-serif;
  }

  .description {
    color: #b0b0b0;
    font-size: 1.2rem;
    margin-bottom: 2rem;
    line-height: 1.7;
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    letter-spacing: 0.01em;
  }

  .features-section {
    margin-bottom: 2rem;
  }

  .features-title {
    color: #ffffff;
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.01em;
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-item {
    color: #d0d0d0;
    font-size: 1.1rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    letter-spacing: 0.01em;
    transition: all 0.3s ease;
  }

  .feature-item:hover {
    color: #ffffff;
    transform: translateX(5px);
  }

  .checkmark {
    color: #00bcd4;
    font-weight: bold;
    font-size: 1.2em;
    text-shadow: 0 0 10px rgba(0, 188, 212, 0.3);
  }

  .explore-btn {
    background: linear-gradient(135deg, #00bcd4 0%, #0097a7 100%);
    color: #ffffff;
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    font-size: 1.1rem;
    letter-spacing: 0.02em;
    box-shadow: 0 4px 20px rgba(0, 188, 212, 0.3);
  }

  .explore-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 188, 212, 0.4);
    background: linear-gradient(135deg, #26c6da 0%, #00bcd4 100%);
  }

  .arrow {
    font-size: 1.2em;
    transition: transform 0.3s ease;
  }

  .explore-btn:hover .arrow {
    transform: translateX(4px);
  }

  .video-side {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    min-height: 600px;
    max-height: 600px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .luxury-video {
    width: 100%;
    height: 100%;
    min-height: 600px;
    object-fit: cover;
    border-radius: 1rem;
    display: block;
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(21, 36, 42, 0.3) 0%, rgba(30, 42, 53, 0.1) 100%);
    border-radius: 1rem;
  }

  .overlay-info {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.8);
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  .country {
    color: #ffffff;
    font-weight: 700;
    font-size: 1rem;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .established {
    color: #00bcd4;
    font-size: 0.95rem;
    font-weight: 500;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.01em;
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 4rem 1rem;
    }

    .container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .form-side {
      max-width: 100%;
    }

    .video-side {
      min-height: 400px;
    }

    .brand-name {
      font-size: clamp(2.2rem, 8vw, 3rem);
    }

    .slogan {
      font-size: 1.2rem;
    }

    .description {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .contact-section {
      padding: 3rem 1rem;
    }

    .luxury-tag {
      padding: 0.6rem 1.2rem;
      font-size: 0.8rem;
    }

    .explore-btn {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }
  }

  /* Animation classes */
  [data-gsap="fade-up"] {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s ease-out;
  }

  [data-gsap="fade-up"].animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  [data-gsap="slide-left"] {
    opacity: 0;
    transform: translateX(-30px);
    transition: all 0.6s ease-out;
  }

  [data-gsap="slide-left"].animate-in {
    opacity: 1;
    transform: translateX(0);
  }

  .luxury-video {
    opacity: 0;
    transform: scale(0.8);
    transition: all 1.2s ease-out;
  }

  .luxury-video.animate-in {
    opacity: 1;
    transform: scale(1);
  }

  .overlay-info {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s ease-out;
  }

  .overlay-info.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
</style>
