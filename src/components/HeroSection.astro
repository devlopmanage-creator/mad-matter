      right: 20px;
    }

    .video-indicators {
      bottom: 20px;
    }

    .indicator {
      width: 30px;
      height: 5px;
    }

    .videoplay {
      width: 36px;
      height: 36px;
      bottom: 20px;
      right: 20px;
    }

    .videoplay svg {
      width: 14px;
      height: 14px;
    }
