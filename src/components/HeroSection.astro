  @keyframes progressBarAnimation {
    from {
      width: 0%;
    }
    to {
      width: 100%;
    }
  }

  @keyframes pulsePause {
    0%, 100% {
      box-shadow: 0 0 15px rgba(232, 212, 160, 0.3);
      border-color: rgba(232, 212, 160, 0.6);
    }
    50% {
      box-shadow: 0 0 25px rgba(232, 212, 160, 0.5);
      border-color: rgba(232, 212, 160, 0.9);
