---
const footerLinks = [
  { name: "About Us", url: "/about-us" },
  { name: "Services", url: "#services" },
  { name: "Contact", url: "#contact" }
];

const services = [
  { name: "Bathroom Design", url: "#services" },
  { name: "Kitchen Design", url: "#services" },
  { name: "Complete Renovation", url: "#services" },
  { name: "Interior Consultation", url: "#services" }
];
---

<footer class="bg-[#15242a] w-full">
  <div class="footer-grid">
    <div class="footer-brand">
      <h2>Famuae</h2>
      <p>Professional bathroom and kitchen design consultancy. We create stunning, functional spaces that reflect your style and enhance your daily life.</p>
    </div>

    <div class="footer-services">
      <h3>Services</h3>
      <ul>
        {services.map(service => (
          <li><a href={service.url}>{service.name}</a></li>
        ))}
      </ul>
    </div>

    <div class="footer-contact">
      <h3>Contact</h3>
      <ul>
        <li>
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          123 Design Street, Creative City, CC 12345
        </li>
        <li>
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          +1 (555) 123-4567
        </li>
        <li>
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          info@designexpert.com
        </li>
        <li>
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Mon-Fri: 9AM-6PM, Sat: 10AM-4PM
        </li>
      </ul>
    </div>

    <div class="footer-catalog">
      <h3>Catalog</h3>
      <p>Get the latest design trends and tips</p>
      <div class="newsletter-form">
        <button>Download</button>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; 2024 DesignExpert. All rights reserved.</p>
    <ul class="footer-legal">
      {footerLinks.map(link => (
        <li><a href={link.url}>{link.name}</a></li>
      ))}
    </ul>
  </div>
</footer>

<style>
  footer {
    background-color: #15242a;
    color: #fff;
    padding: 4rem 2rem 2rem;
    width: 100%;
    margin: 0;
  }

  .footer-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 3rem;
    margin-bottom: 4rem;
  }

  h2 {
    color: rgb(0, 178, 169);
    font-size: 1.5rem;
    margin: 0 0 1rem;
  }

  h3 {
    font-size: 1.2rem;
    margin: 0 0 1.5rem;
    color: #fff;
  }

  p {
    color: rgb(156, 163, 175);
    line-height: 1.6;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-services li {
    margin-bottom: 0.75rem;
  }

  .footer-services a {
    color: rgb(156, 163, 175);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-services a:hover {
    color: rgb(0, 178, 169);
  }

  .footer-contact ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-contact li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgb(156, 163, 175);
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
    color: rgb(0, 178, 169);
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid rgb(55, 65, 81);
    border-radius: 0.375rem;
    background: transparent;
    color: #fff;
  }

  button {
    padding: 0.75rem 1.5rem;
    background-color: rgb(0, 178, 169);
    color: #fff;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  button:hover {
    background-color: rgb(0, 151, 143);
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid rgb(55, 65, 81);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-bottom p {
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .footer-legal a {
    color: rgb(156, 163, 175);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-legal a:hover {
    color: rgb(0, 178, 169);
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-legal {
      justify-content: center;
    }
  }
</style>
