<style>
  footer {
    background-color: #0A0F14;
    color: #fff;
    padding: 4rem 2rem 2rem;
    width: 100%;
    margin: 0;
  }

  .footer-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 3rem;
    margin-bottom: 4rem;
  }

  h2 {
    color: #e8d4a0;
    font-size: 1.5rem;
    margin: 0 0 1rem;
  }

  h3 {
    font-size: 1.2rem;
    margin: 0 0 1.5rem;
    color: #fff;
  }

  p {
    color: rgb(156, 163, 175);
    line-height: 1.6;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-services li {
    margin-bottom: 0.75rem;
  }

  .footer-services a {
    color: rgb(156, 163, 175);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-services a:hover {
    color: #BFA16B !important;
  }

  .footer-contact ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-contact li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgb(156, 163, 175);
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #BFA16B;
    transition: all 0.3s ease;
  }

  .footer-contact li:hover .icon {
    color: #e8d4a0;
    transform: scale(1.15) rotate(5deg);
    filter: drop-shadow(0 2px 4px rgba(191, 161, 107, 0.3));
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid rgb(55, 65, 81);
    border-radius: 0.375rem;
    background: transparent;
    color: #fff;
  }

  /* Social Media Styles */
  .footer-catalog {
    color: #fff;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.3s ease;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .social-link:hover {
    background-color: #BFA16B;
    color: white;
    transform: translateY(-2px);
    border-color: #BFA16B;
    box-shadow: 0 4px 12px rgba(191, 161, 107, 0.3);
  }

  .social-icon {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid rgb(55, 65, 81);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer-bottom p {
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .footer-legal a {
    color: rgb(156, 163, 175);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-legal a:hover {
    color: #BFA16B;
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .powered-by {
    color: #8b949e;
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-legal {
      justify-content: center;
    }
  }
</style>