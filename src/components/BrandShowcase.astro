    pdfUrl: "https://drive.google.com/file/d/1BuOJC9lOldUkS17CK-dEAX9UvMGkNcgJ/preview"
  },
  { 
    name: "WONDA", 
    image: "https://images.unsplash.com/photo-1600566752355-35792bedcfea?auto=format&fit=crop&w=600&h=400",
    description: "Innovative smart bathroom technology and fixtures",
    pdfUrl: "/catalogues/Katalog_compressed.pdf"
  },
  { 
    name: "La Concept Furniture", 
    image: "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?auto=format&fit=crop&w=600&h=400",
    description: "Elegant furniture for modern living spaces",
    pdfUrl: "/catalogues/Laconcept_Collection_2025_ .pdf_compressed.pdf"
  },
  { 
    name: "JOMOO", 
    image: "https://images.unsplash.com/photo-1620626011761-996317b8d101?auto=format&fit=crop&w=600&h=400",
    description: "Advanced sanitary ware with intelligent features"
  },
  { 
    name: "F.lli Frattini", 
    image: "https://images.unsplash.com/photo-1584622650111-993a426fbf0a?auto=format&fit=crop&w=600&h=400",
    description: "Italian craftsmanship in luxury faucets"
  },
  { 
