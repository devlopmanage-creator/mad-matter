---
const testimonials = [
  {
    name: "Ahmed Al Mansouri",
    role: "Villa Owner, Dubai",
    text: "FAM transformed our master bathroom into a luxurious spa retreat. The quality of materials and attention to detail exceeded all expectations. Highly recommended!",
    image: "https://ui-avatars.com/api/?name=Ahmed+Al+Mansouri&background=bfa16b&color=fff"
  },
  {
    name: "Sarah Thompson",
    role: "Interior Designer",
    text: "Working with FAM has been exceptional. Their extensive range of premium brands and expert guidance made our high-end residential projects truly outstanding.",
    image: "https://ui-avatars.com/api/?name=Sarah+Thompson&background=bfa16b&color=fff"
  },
  {
    name: "Mohammed Hassan",
    role: "Property Developer",
    text: "For our luxury apartment complex, FAM provided top-tier materials and impeccable service. Their expertise in both design and functionality is unmatched in the UAE.",
    image: "https://ui-avatars.com/api/?name=Mohammed+Hassan&background=bfa16b&color=fff"
  }
];
---

<section class="testimonials">
  <div class="container">
    <h2>Trusted by Discerning Clients</h2>
    <div class="testimonials-grid">
      {testimonials.map(testimonial => (
        <div class="testimonial-card">
          <div class="testimonial-image">
            <img src={testimonial.image} alt={`${testimonial.name}'s portrait`} />
          </div>
          <blockquote>
            <p>{testimonial.text}</p>
            <footer>
              <cite>{testimonial.name}</cite>
              <span>{testimonial.role}</span>
            </footer>
          </blockquote>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    padding: var(--spacing-xl) 0;
    background-color: rgba(21, 36, 42, 0.6);
  }

  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--spacing-xl);
    color: var(--color-foreground);
  }

  .testimonials-grid {
    display: grid;
    gap: var(--spacing-lg);
    padding: var(--spacing-md);
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .testimonial-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    transition: transform 0.3s ease, background 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.08);
  }

  .testimonial-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
    border: 2px solid rgba(0, 178, 169, 0.6);
  }

  .testimonial-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  blockquote {
    text-align: center;
  }

  blockquote p {
    font-style: italic;
    color: var(--color-foreground);
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }

  blockquote footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xs);
  }

  cite {
    font-style: normal;
    font-weight: bold;
    color: rgba(0, 178, 169, 0.9);
  }

  span {
    font-size: 0.875rem;
    color: var(--color-muted);
  }
</style>
