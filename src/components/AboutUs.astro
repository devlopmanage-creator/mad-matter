    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2.5rem 1.5rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    text-align: center;
  }

  .service-card:hover {
    transform: translateY(-5px);
    border-color: rgba(191, 161, 107, 0.3);
