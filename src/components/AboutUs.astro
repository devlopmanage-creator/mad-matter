<section class="about">
    <div class="container">
        <!-- Header Section with Title and Line -->
        <div class="header">
            <h1>Welcome to First Consultants</h1>
            <div class="divider"></div>
        </div>
        
        <!-- Main Content Grid -->
        <div class="content-grid">
            <!-- Left Column - Team Photo -->
            <div class="photo-container">
                <img 
                    src="/images/team-photo.jpg" 
                    alt="First Consultants Team" 
                    class="team-photo"
                />
            </div>
            
            <!-- Right Column - Content -->
            <div class="content-text">
                <div class="text-content">
                    <p>
                        Welcome to First Consultant Building Materialsâ€”clients' most trusted (and loved) source for world class red-dot award sanitary ware.
                    </p>
                    <p>
                        From homeowners like yourself, to contractors shaping iconic projects - we have spent countless years proudly bringing visions to life. 
                        <span class="emphasis">We provide the best, for those who want the best.</span>
                    </p>
                </div>
                
                <!-- Statistics Boxes -->
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-number">30</div>
                        <div class="stat-label">Successful Years</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-number">12</div>
                        <div class="stat-label">Seasoned Experts</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .about {
        background-color: #1A2B36;
        padding: 5rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .header h1 {
        font-size: 3rem;
        font-weight: 300;
        color: white;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .divider {
        width: 8rem;
        height: 1px;
        background-color: white;
        margin: 0 auto;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: start;
    }

    @media (min-width: 1024px) {
        .content-grid {
            grid-template-columns: 1fr 1fr;
        }
        
        .photo-container {
            order: 1;
        }
        
        .content-text {
            order: 2;
        }
    }

    .team-photo {
        width: 100%;
        height: 600px;
        object-fit: cover;
        object-position: center;
    }

    .content-text {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .text-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .text-content p {
        color: white;
        font-size: 1.125rem;
        line-height: 1.75;
    }

    .emphasis {
        font-style: italic;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-top: 3rem;
    }

    .stat-box {
        background-color: #2A3E4C;
        border: 1px solid white;
        padding: 2rem;
        text-align: center;
        transition: transform 0.3s ease;
    }

    .stat-box:hover {
        transform: translateY(-5px);
    }

    .stat-number {
        font-size: 3rem;
        font-weight: bold;
        color: white;
        margin-bottom: 0.5rem;
        line-height: 1;
    }

    .stat-label {
        color: #CBD5E0;
        font-size: 0.875rem;
    }
</style>
