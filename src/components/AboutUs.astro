---
import { Image } from 'astro:assets';

// Animation data for counters
const statsData = [
  { number: 3, label: "Years Experience", suffix: "+" },
  { number: 50, label: "Projects Completed", suffix: "+" },
  { number: 9, label: "Premium Brands", suffix: "" },
  { number: 24, label: "Support Available", suffix: "/7" }
];

// Services data
const services = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>`,
    title: "Expert Consultation",
    description: "Our experienced team provides personalized guidance to help you select the perfect tiles, sanitary ware, and fixtures for your project."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>`,
    title: "Premium Brands",
    description: "We represent world-class brands including TILES, WONDA, JOMOO, F.LLI FRATTINI, I-SPA, RADAWAY, RAMONSOLAR, TECE, and STRATOZ."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>`,
    title: "Fast Delivery",
    description: "Quick and reliable delivery services ensure your building materials arrive on time, keeping your construction project on schedule."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>`,
    title: "Quality Guarantee",
    description: "All our building materials come with comprehensive warranties and our commitment to excellence ensures your complete satisfaction."
  }
];

// Company values
const values = [
  {
    title: "Quality First",
    description: "We source only the finest materials from trusted manufacturers, ensuring every product meets our rigorous quality standards."
  },
  {
    title: "Customer Focus",
    description: "Your vision drives our mission. We listen, understand, and deliver solutions that exceed your expectations."
  },
  {
    title: "Innovation",
    description: "We stay ahead of industry trends, offering cutting-edge products and technologies for modern living spaces."
  },
  {
    title: "Reliability",
    description: "Count on us for consistent quality, timely delivery, and dependable service throughout your project journey."
  }
];
---

<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-content">
    <h1>About <span class="accent">FAMUAE</span></h1>
    <p>Your trusted partner in premium building materials and design excellence in the UAE</p>
  </div>
</section>

<!-- Main About Content -->
<section class="about-content">
  <div class="container">
    <!-- Story Section -->
    <div class="story-section">
      <div class="story-grid">
        <div class="story-text">
          <h2>Our Story</h2>
          <p>FAMUAE was founded with a clear vision: to bring premium building materials and exceptional service to the UAE market. In just a few years, we have established ourselves as a trusted partner for homeowners, architects, and contractors seeking quality materials and expert guidance.</p>
          <p>Our commitment to excellence and customer satisfaction has allowed us to grow rapidly, building lasting relationships with clients who value quality and reliability. We specialize in tiles, sanitary ware, kitchen fixtures, and wellness solutions from the world's most respected brands.</p>
          <blockquote class="highlight-quote">
            "Quality materials, exceptional service, and lasting partnerships."
          </blockquote>
        </div>
        <div class="story-image">
          <img 
            src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
            alt="FAMUAE Building Materials Showroom" 
            loading="lazy"
          />
        </div>
      </div>
    </div>

    <!-- Statistics Section -->
    <div class="stats-section">
      <h2>Our Achievements</h2>
      <div class="stats-grid">
        {statsData.map((stat, index) => (
          <div class="stat-card">
            <div class="stat-number" data-count={stat.number}>0</div>
            <div class="stat-label">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Services Section -->
    <div class="services-section">
      <h2>What We Offer</h2>
      <div class="services-grid">
        {services.map(service => (
          <div class="service-card">
            <div class="service-icon" set:html={service.icon} />
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Values Section -->
    <div class="values-section">
      <h2>Our Values</h2>
      <p class="values-subtitle">The principles that guide everything we do</p>
      <div class="values-grid">
        {values.map(value => (
          <div class="value-card">
            <h3>{value.title}</h3>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA Section -->
    <div class="cta-section">
      <h2>Ready to Start Your Project?</h2>
      <p>Let our experts help you choose the perfect tiles, sanitary ware, and fixtures for your construction or renovation project</p>
      <a href="https://wa.me/971503609253?text=Hello%2C%20I%27m%20interested%20in%20your%20building%20materials%20and%20services" class="cta-button" target="_blank" rel="noopener noreferrer">
        Get Free Consultation
      </a>
    </div>
  </div>
</section>

<style>
  /* Hero Section */
  .hero-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #0c0d0f;
    color: white;
    text-align: center;
    padding: 8rem 1rem 4rem;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    margin-bottom: 1rem;
  }

  .hero-content .accent {
    color: #bfa16b;
  }

  .hero-content p {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Main Content */
  .about-content {
    background-color: #15242a;
    padding: 8rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Story Section */
  .story-section {
    margin-bottom: 6rem;
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .story-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .story-text h2 {
    font-size: 2rem;
    font-weight: 300;
    color: white;
    margin-bottom: 2rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .story-text p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .highlight-quote {
    background: rgba(255, 255, 255, 0.05);
    border-left: 4px solid #bfa16b;
    padding: 2rem;
    margin: 2rem 0;
    border-radius: 0 12px 12px 0;
    font-style: italic;
    color: white;
    font-size: 1.25rem;
    position: relative;
  }

  .story-image {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .story-image img {
    width: 100%;
    height: auto;
    min-height: 400px;
    max-height: 500px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .story-image:hover img {
    transform: scale(1.05);
  }

  /* Statistics Section */
  .stats-section {
    margin-bottom: 6rem;
    text-align: center;
  }

  .stats-section h2 {
    font-size: 2rem;
    font-weight: 300;
    color: white;
    margin-bottom: 3rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  .stat-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2.5rem 1.5rem;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    border-color: rgba(191, 161, 107, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: #bfa16b;
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .stat-label {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Services Section */
  .services-section {
    margin-bottom: 6rem;
    text-align: center;
  }

  .services-section h2 {
    font-size: 2rem;
    font-weight: 300;
    color: white;
    margin-bottom: 3rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
