---
interface Service {
    title: string;
    description: string;
}

const stats = [
    { number: "30", label: "Successful Years" },
    { number: "12", label: "Seasoned Experts" }
];

const services: Service[] = [
    {
        title: "Product Consultation",
        description: "Our seasoned team will assist you in selecting the most suitable products from our extensive product range, considering your specific needs and preferences. Tell us what you like, we'd love to hear it."
    },
    {
        title: "Installation & Setup",
        description: "We don't like waiting either. Time is money, and we help you save it - from plumbing to the smallest design choices, we take care of the entire process from A to Z. We don't settle for anything less than perfect."
    },
    {
        title: "After-sales Experience",
        description: "Our business doesn't end with the installation, we provide an extensive post-sales support, and some of the best warantees currently available in the market."
    }
];
---

<div class="about-content">
    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1>Welcome to First Consultants</h1>
                <div class="divider"></div>
            </div>
        </div>
    </section>

    <!-- Main Content Section -->
    <section class="main">
        <div class="container">
            <div class="content-grid">
                <div class="team-photo-wrapper">
                    <img 
                        src="https://www.firstconsultant.co/_astro/team-image.DH2PQYVz_lJOJM.webp" 
                        alt="The heroes of first consultant building materials, the full team." 
                        class="team-photo"
                    />
                </div>
                
                <div class="content-wrapper">
                    <div class="text-content">
                        <p>
                            Welcome to First Consultant Building Materials—clients' most trusted (and loved) source for world class red-dot award sanitary ware.
                        </p>
                        <p>
                            From homeowners like yourself, to contractors shaping iconic projects - we have spent countless years proudly bringing visions to life. 
                            <em>We provide the best, for those who want the best.</em>
                        </p>
                    </div>
                    
                    <div class="stats-wrapper">
                        <div class="stats">
                            {stats.map(stat => (
                                <div class="stat-card">
                                    <span class="number">{stat.number}</span>
                                    <span class="label">{stat.label}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services">
        <div class="container">
            <div class="services-grid">
                {services.map(service => (
                    <div class="service-card">
                        <div class="service-header">
                            <span class="checkmark">✓</span>
                            <h3>{service.title}</h3>
                        </div>
                        <p>{service.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Passion Section -->
    <section class="passion">
        <div class="container">
            <div class="passion-header">
                <h2>Passion for Perfection</h2>
                <div class="divider"></div>
            </div>
            
            <div class="passion-grid">
                <div class="passion-content">
                    <p>
                        At First Consultant Building Materials, we don't just provide products - we help
                        create spaces that make you feel like home. Spaces that inspire, spaces that
                        will stand the test of time.
                    </p>
                    <p>
                        Our journey began with experience, belief, and knowledge. We have served a
                        multitude of clients ranging from ordinary people, to large corporations. Through
                        that, we have witnessed the power of well-chosen materials, turning dead structures
                        into something living... beautiful, filled with warmth, character and life.
                    </p>
                    <p>
                        Our passion and love for perfection is contagious. We aim to make First
                        Consultants a beacon of reliability, and set a new standard in our industry.
                    </p>
                </div>
                <div class="ceo-image">
                    <img 
                        src="https://www.firstconsultant.co/_astro/ceo.Dk3rRLzg_1lfDiE.webp" 
                        alt="CEO of FC Building Materials" 
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact">
        <div class="container">
            <h2>Get in touch with us</h2>
            
            <div class="contact-grid">
                <div class="office-image">
                    <img 
                        src="https://www.firstconsultant.co/_astro/office-image.CQVBEvEZ_2d4RuM.webp" 
                        alt="First Consultants Building Materials office in Sharjah" 
                    />
                </div>
                
                <div class="contact-info">
                    <div class="info-block">
                        <h3>Contact Information</h3>
                        <p>Telephone: +971-503609253</p>
                        <p>Email: ceo@firstconsultant.co</p>
                        <p>Whatsapp: +971-503609253</p>
                    </div>
                    
                    <div class="info-block">
                        <h3>Social Media</h3>
                        <p>Instagram: @firstConsultants</p>
                        <p>Tiktok: @firstConsultants</p>
                    </div>
                    
                    <div class="info-block">
                        <h3>Visit our showroom</h3>
                        <p>Schedule a meeting with our team to explore our offerings in person.</p>
                        <a href="#" class="cta-button">Schedule a meeting</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .about-content {
        background-color: #15242a;
        color: white;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Common elements */
    .divider {
        width: 8rem;
        height: 1px;
        background-color: white;
        margin: 0 auto;
    }

    /* Hero Section */
    .hero {
        padding: 5rem 0;
        text-align: center;
    }

    .hero h1 {
        font-size: 3rem;
        font-weight: 300;
        margin-bottom: 1rem;
        letter-spacing: 1px;
    }

    /* Main Content Section */
    .main {
        padding: 5rem 0;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
    }

    .team-photo {
        width: 100%;
        height: auto;
        max-height: 600px;
        object-fit: cover;
        border-radius: 0.5rem;
        transition: transform 0.3s ease;
    }

    .team-photo:hover {
        transform: scale(1.02);
    }

    .text-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .text-content p {
        font-size: 1.125rem;
        line-height: 1.6;
    }

    /* Stats */
    .stats-wrapper {
        display: flex;
        justify-content: flex-end;
        margin-top: 2rem;
    }

    .stats {
        display: flex;
        gap: 1rem;
    }

    .stat-card {
        background-color: rgba(26, 43, 54, 0.5);
        backdrop-filter: blur(10px);
        padding: 1rem 1.5rem;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        min-width: 120px;
    }

    .stat-card:hover {
        background-color: rgba(26, 43, 54, 0.7);
        border-color: rgba(255, 255, 255, 0.15);
    }

    .stat-card .number {
        display: block;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: white;
    }

    .stat-card .label {
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.8);
        letter-spacing: 0.5px;
    }

    /* Services Section */
    .services {
        padding: 5rem 0;
        background-color: #15242a;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .service-card {
        padding: 2rem;
        background-color: #1a2b36;
        border-radius: 0.5rem;
        transition: transform 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-5px);
    }

    .service-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .checkmark {
        color: #4fd1c5;
        font-size: 1.25rem;
    }

    .service-card h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
    }

    .service-card p {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    /* Passion Section */
    .passion {
        padding: 5rem 0;
    }

    .passion-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .passion-header h2 {
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 1rem;
    }

    .passion-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 3rem;
        align-items: start;
    }

    .passion-content p {
        margin-bottom: 1.5rem;
        font-size: 1.125rem;
        line-height: 1.6;
    }

    .ceo-image img {
        width: 100%;
        border-radius: 0.5rem;
        transition: transform 0.3s ease;
    }

    .ceo-image img:hover {
        transform: scale(1.02);
    }

    /* Contact Section */
    .contact {
        padding: 5rem 0;
        background-color: #15242a;
    }

    .contact h2 {
        font-size: 2.5rem;
        font-weight: 300;
        text-align: center;
        margin-bottom: 3rem;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }

    .office-image img {
        width: 100%;
        border-radius: 0.5rem;
        transition: transform 0.3s ease;
    }

    .office-image img:hover {
        transform: scale(1.02);
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    .info-block h3 {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 1rem;
    }

    .info-block p {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 0.5rem;
    }

    .cta-button {
        display: inline-block;
        background-color: transparent;
        border: 2px solid white;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        text-decoration: none;
        margin-top: 1rem;
        transition: all 0.3s ease;
    }

    .cta-button:hover {
        background-color: white;
        color: #15242a;
    }

    /* Responsive Design */
    @media (min-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    @media (max-width: 768px) {
        .services-grid,
        .passion-grid,
        .contact-grid {
            grid-template-columns: 1fr;
        }

        .hero h1,
        .passion-header h2,
        .contact h2 {
            font-size: 2rem;
        }

        .stats {
            grid-template-columns: 1fr;
        }
    }
</style>
