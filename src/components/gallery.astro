  <script is:inline>
    // Initialize gallery interactions when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize gallery interactions
      initGallery();
    });
  </script>
  
  <script is:inline>
    // Gallery functionality (global)
    function initGallery() {
      console.log('Starting gallery initialization...');
      const galleryItems = document.querySelectorAll('.gallery-item');
      console.log('Found gallery items:', galleryItems.length);
      
      if (galleryItems.length === 0) {
        console.error('No gallery items found!');
        return;
      }
      
      galleryItems.forEach((item, index) => {
        console.log('Adding click listener to item:', index);
        item.addEventListener('click', function(e) {
          e.preventDefault();
          console.log('Gallery item clicked:', index);
          
          const img = this.querySelector('.gallery-img');
          if (!img) {
            console.error('No image found in gallery item');
            return;
          }
          
          const imgSrc = img.src;
          const imgAlt = img.alt;
          
          console.log('Image data:', { src: imgSrc, alt: imgAlt });
          
          // Open the modal directly
          openImageViewer(imgSrc, imgAlt, index + 1);
        });
      });
    }
    
    // Global gallery functions
    function openImageViewer(imgSrc, imgAlt, slideNumber) {
      console.log('openImageViewer called with:', imgSrc, imgAlt, slideNumber);
      
      // Remove any existing modal first
      const existingModal = document.querySelector('.image-modal');
      if (existingModal) {
        existingModal.remove();
      }
      
      // Create modal overlay
      const modal = document.createElement('div');
      modal.className = 'image-modal';
      modal.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        cursor: pointer;
      `;
      
      modal.innerHTML = `
        <div class="modal-content" style="
          background: white;
          border-radius: 12px;
          max-width: 90vw;
          max-height: 90vh;
          display: flex;
          flex-direction: column;
          box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
          overflow: hidden;
          cursor: default;
        ">
          <div class="modal-header" style="
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #eee;
            background: #f8f8f8;
          ">
            <h3 style="margin: 0; font-family: 'Playfair Display', serif; font-size: 1.2rem; color: #222;">${imgAlt}</h3>
            <button class="close-btn" style="
              background: none;
              border: none;
              font-size: 1.5rem;
              cursor: pointer;
              color: #666;
              padding: 0;
              width: 30px;
              height: 30px;
              display: flex;
              align-items: center;
              justify-content: center;
              border-radius: 50%;
            ">&times;</button>
          </div>
          <div class="modal-body" style="
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: #fafafa;
          ">
            <img src="${imgSrc}" alt="${imgAlt}" class="modal-image" style="
              max-width: 100%;
              max-height: 70vh;
              object-fit: contain;
              border-radius: 8px;
              box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            " />
          </div>
        </div>
      `;
      
      document.body.appendChild(modal);
      document.body.style.overflow = 'hidden';
      
      console.log('Modal added to DOM');
      
      // Add event listeners
      const closeBtn = modal.querySelector('.close-btn');
      
      closeBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        closeImageViewer();
      });
      
      // Close when clicking outside
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          closeImageViewer();
        }
      });
      
      // Close with Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closeImageViewer();
        }
      });
    }
    
    function closeImageViewer() {
      const modal = document.querySelector('.image-modal');
      if (modal) {
        modal.remove();
        document.body.style.overflow = 'auto'; // Restore scrolling
      }
    }
    
    function downloadImage(imgSrc, imgAlt) {
      const link = document.createElement('a');
      link.href = imgSrc;
      link.download = imgAlt.replace(/\s+/g, '_') + '.jpg';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }
    
    // Manual initialization function
    function initGalleryManually() {
      console.log('Manual gallery initialization...');
      initGallery();
    }
    
    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', function() {
      console.log('DOM loaded, initializing gallery...');
      setTimeout(initGallery, 1000); // Wait 1 second to ensure everything is loaded
    });
    
    // Also try to initialize after a longer delay
    setTimeout(function() {
      console.log('Delayed gallery initialization...');
      initGallery();
    }, 3000);
  </script>
  <style>
    .gallery-component {
      width: 100%;
      min-height: 100vh;
      margin: 0;
      padding: 0;
    }
    
    .gallery-component .section {
      width: 100%;
      height: 100vh;
      min-height: 100vh;
      max-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin: 0;
      padding: 0;
    }
    
    /* Gallery Hero Section */
    .gallery-component .gallery-hero {
      background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);
      position: relative;
      overflow: hidden;
    }
    
    .gallery-component .gallery-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=1600&q=80') center/cover;
      opacity: 0.3;
      z-index: 1;
    }
    
    .gallery-component .gallery-hero-content {
      position: relative;
      z-index: 2;
      text-align: center;
      color: #222;
      max-width: 800px;
      padding: 0 2rem;
    }
    
    .gallery-component .gallery-title {
      font-family: 'Playfair Display', serif;
      font-size: 4rem;
      font-weight: 400;
      color: #222;
      margin-bottom: 1.5rem;
      letter-spacing: 2px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }
    
    .gallery-component .gallery-subtitle {
      font-family: 'Montserrat', Arial, sans-serif;
      font-size: 1.3rem;
      color: #bfa16b;
      letter-spacing: 3px;
      margin-bottom: 2rem;
      text-transform: uppercase;
      font-weight: 500;
    }
    
    .gallery-component .gallery-description {
      font-family: 'Montserrat', Arial, sans-serif;
      font-size: 1.2rem;
      color: #555;
      line-height: 1.6;
      max-width: 600px;
      margin: 0 auto;
    }
    
    /* Gallery Grid Section */
    .gallery-component .gallery-grid-section {
      background: #f8f8f8;
      padding: 2rem 0;
      overflow-y: auto;
    }
    
    .gallery-component .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
      width: 100%;
    }
    
    .gallery-component .gallery-item {
      position: relative;
      overflow: hidden;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      cursor: pointer;
      background: white;
    }
    
    .gallery-item:hover {
      transform: translateY(-8px);
      box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
    }
    
    .gallery-item:active {
      transform: translateY(-4px) scale(0.98);
    }
    
    /* Add a subtle overlay on hover to indicate clickability */
    .gallery-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(191, 161, 107, 0);
      transition: background 0.3s ease;
      z-index: 1;
      pointer-events: none;
    }
    
    .gallery-item:hover::before {
      background: rgba(191, 161, 107, 0.1);
    }
    
    /* Gallery overlay and icon */
    .gallery-component .gallery-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.4);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 2;
    }
    
    .gallery-item:hover .gallery-overlay {
      opacity: 1;
    }
    
    .gallery-component .gallery-icon {
      width: 3rem;
      height: 3rem;
      color: white;
      filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.5));
      transition: transform 0.3s ease;
    }
    
    .gallery-item:hover .gallery-icon {
      transform: scale(1.2);
    }
    
    .gallery-component .gallery-img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      display: block;
      transition: transform 0.3s ease;
    }
    
    .gallery-item:hover .gallery-img {
      transform: scale(1.05);
    }
    
    /* CTA Section */
    .gallery-component .gallery-cta {
      background: linear-gradient(135deg, #bfa16b 0%, #a88c5c 100%);
      color: white;
    }
    
    .gallery-component .cta-content {
      text-align: center;
      max-width: 800px;
      padding: 0 2rem;
    }
    
    .gallery-component .cta-title {
      font-family: 'Playfair Display', serif;
      font-size: 3rem;
      font-weight: 400;
      margin-bottom: 1.5rem;
      letter-spacing: 1px;
    }
    
    .gallery-component .cta-description {
      font-family: 'Montserrat', Arial, sans-serif;
      font-size: 1.2rem;
      line-height: 1.6;
      margin-bottom: 2.5rem;
      opacity: 0.9;
    }
    
    .gallery-component .cta-buttons {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .gallery-component .cta-button {
      padding: 1rem 2rem;
      border: 2px solid white;
      background: white;
      color: #bfa16b;
      text-decoration: none;
      font-family: 'Montserrat', Arial, sans-serif;
      font-size: 1rem;
      font-weight: 500;
      letter-spacing: 1px;
      text-transform: uppercase;
      border-radius: 0;
      transition: all 0.3s ease;
      display: inline-block;
      text-align: center;
      min-width: 180px;
    }
    
    .cta-button:hover {
      background: transparent;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255, 255, 255, 0.3);
    }
    
    .cta-button.secondary {
      background: transparent;
      color: white;
    }
    
    .cta-button.secondary:hover {
      background: white;
      color: #bfa16b;
    }
    
    /* Image Modal Styles */
    .gallery-component .image-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.9);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      backdrop-filter: blur(5px);
    }
    
    .gallery-component .modal-content {
      background: white;
      border-radius: 12px;
      max-width: 90vw;
      max-height: 90vh;
      display: flex;
      flex-direction: column;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }
    
    .gallery-component .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #eee;
      background: #f8f8f8;
    }
    
    .modal-header h3 {
      margin: 0;
      font-family: 'Playfair Display', serif;
      font-size: 1.2rem;
      color: #222;
    }
    
    .gallery-component .close-btn {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #666;
      padding: 0;
      width: 30px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      transition: all 0.2s ease;
    }
    
    .close-btn:hover {
      background: #e0e0e0;
      color: #222;
    }
    
    .gallery-component .modal-body {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      background: #fafafa;
    }
    
    .gallery-component .modal-image {
      max-width: 100%;
      max-height: 70vh;
      object-fit: contain;
      border-radius: 8px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }
    
    /* Responsive Styles */
    @media (max-width: 900px) {
      .gallery-component .gallery-title { font-size: 3rem; }
      .gallery-component .gallery-subtitle { font-size: 1.1rem; }
      .gallery-component .gallery-description { font-size: 1rem; }
      
      .gallery-component .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        padding: 1.5rem;
      }
      
      .gallery-component .gallery-img {
        height: 250px;
      }
      
      .gallery-component .cta-title { font-size: 2.5rem; }
      .gallery-component .cta-description { font-size: 1.1rem; }
    }
    
    @media (max-width: 600px) {
      .gallery-component .gallery-title { font-size: 2.5rem; }
      .gallery-component .gallery-subtitle { font-size: 1rem; }
      .gallery-component .gallery-description { font-size: 0.9rem; }
      
      .gallery-component .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1rem;
        padding: 1rem;
      }
      
      .gallery-component .gallery-img {
        height: 220px;
      }
      
      .gallery-component .cta-title { font-size: 2rem; }
      .gallery-component .cta-description { font-size: 1rem; }
      
      .gallery-component .cta-buttons {
        flex-direction: column;
        gap: 1rem;
      }
      
      .gallery-component .cta-button {
        padding: 0.8rem 1.5rem;
        font-size: 0.9rem;
        min-width: 160px;
      }
    }
    
    @media (max-width: 480px) {
      .gallery-component .gallery-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
        padding: 1rem;
      }
      
      .gallery-component .gallery-img {
        height: 200px;
      }
      
      /* Modal responsive */
      .gallery-component .modal-content {
        max-width: 95vw;
        max-height: 95vh;
      }
      
      .gallery-component .modal-header {
        padding: 0.75rem 1rem;
      }
      
      .modal-header h3 {
        font-size: 1rem;
      }
      
      .gallery-component .modal-body {
        padding: 0.5rem;
      }
    }
  </style>
