---
const brands = ["TILES", "WONDA", "JOMOO", "F.LLI FRATTINI", "I-SPA", "RADAWAY", "RAMONSOLAR", "TECE", "STRATOZ"];
---

<!-- Brands Carousel -->
<section class="brands-carousel-section">
  <div class="container">
    <h3 class="carousel-title">Partnered with Leading Brands</h3>
    <div class="brands-carousel">
      <div class="brands-track">
        {[...brands, ...brands].map((brand, index) => (
          <div class="brand-item">
            <span>{brand}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Brands Carousel Styles - Voke Studios Inspired */
  .brands-carousel-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background);
    text-align: center;
    width: 100%;
  }

  .carousel-title {
    font-size: 1.5rem;
    color: var(--color-foreground);
    margin-bottom: var(--spacing-xl);
    font-weight: 400;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .brands-carousel {
    overflow: hidden;
    position: relative;
    background-color: transparent;
    border: none;
    width: 100%;
    margin: 0 auto;
    max-width: 1200px;
  }

  .brands-track {
    display: flex;
    animation: scroll 30s linear infinite;
    gap: 4rem;
    width: calc(200% + 8rem);
    padding: 0 2rem;
    will-change: transform;
    align-items: center;
  }

  .brand-item {
    flex-shrink: 0;
    background-color: transparent;
    padding: 0;
    border: none;
    transition: all 0.3s ease;
    min-width: auto;
    max-width: none;
    text-align: center;
    white-space: nowrap;
    box-shadow: none;
    opacity: 0.6;
  }

  .brand-item:hover {
    transform: none;
    background-color: transparent;
    border: none;
    box-shadow: none;
    opacity: 1;
  }

  .brand-item span {
    font-weight: 300;
    color: var(--color-foreground);
    font-size: 1.1rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: all 0.3s ease;
    opacity: 0.7;
  }

  .brand-item:hover span {
    color: var(--color-accent);
    opacity: 1;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-50% - 1rem));
    }
  }

  .brands-carousel:hover .brands-track {
    animation-play-state: paused;
  }

  @media (max-width: 767px) {
    .brands-carousel-section {
      padding: var(--spacing-md) 0;
      margin-top: var(--spacing-sm);
    }
    
    .carousel-title {
      font-size: 1.2rem;
      margin-bottom: var(--spacing-md);
    }
    
    .brands-track {
      gap: 2rem;
      padding: 0 1rem;
    }
    
    .brand-item {
      padding: var(--spacing-xs) var(--spacing-sm);
      min-width: 120px;
    }
    
    .brand-item span {
      font-size: 0.8rem;
    }
  }
</style>